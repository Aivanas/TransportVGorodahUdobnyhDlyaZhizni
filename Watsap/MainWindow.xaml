<Window x:Class="Watsap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Watsap"
        mc:Ignorable="d"
        Title="MainWindow" Height="283" Width="393">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="87*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Вацап" Margin="10,0,10,5"/>
        <TextBox x:Name="userNameTb" TextWrapping="Wrap" VerticalAlignment="Center" Height="25" Grid.Row="1" Margin="10,0,10,0" AutomationProperties.HelpText="Введите имя пользователя"/>
        <Button x:Name="newChatBtn" Content="Новый чат" Height="26" Margin="10,0,10,0" Grid.Row="2" VerticalAlignment="Center" Click="newChatBtn_Click"/>
        <Button x:Name="oldChatBtn" Content="Старый чат" Height="27" Grid.Row="3" VerticalAlignment="Center" Margin="10,0,10,0" Click="oldChatBtn_Click"/>
        <TextBox x:Name="ipTb" Height="28" Margin="10,10,10,0" Grid.Row="4" TextWrapping="Wrap" VerticalAlignment="Top" AutomationProperties.HelpText="Введите ip"/>
    </Grid>
</Window>
